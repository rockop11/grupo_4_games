<!DOCTYPE html>
<html lang="es">

<%- include("../partials/head", {Solapa:"ZG - Productos"}) %>

    <body>

        <%- include('../partials/header') %>

            <h1>Resultado de busqueda</h1>

            <section class="container-products">
                <div class="container products-wrapper">
                    <div class="row">
                        <div class="col-12">
                            <h2 class="products-title">Resultados de la búsqueda: <%= search %></h2>
                        </div>
                        <% if (products.length) { %>
                         
                            <% for (product of products) { 
                                let finalPrice=product.descuento ? (product.precio - product.precio * product.descuento / 100).toFixed(0) : product.precio; 
                            %>
                                <div class="col-12 col-sm-6 col-lg-3">
                                    <section class="product-box">
                                        <a href="/products/detail/<%= product.id %> ">
                                            <figure class="product-box_image">
                                                <img src="/images/products/<%= product.imagen %> " alt="<%= product.nombre %>">
                                            </figure>
                                            <article class="product-box_data">
                                                <h2>$<%= toThousand(finalPrice) %>
                                                </h2>
                                                <%- product.descuento ? `<span>${product.descuento}% OFF</span>` : '' %>
                                                    <p>
                                                        <%= product.nombre %>
                                                    </p>
                                                    <i class="fas fa-truck"></i>
                                            </article>
                                        </a>
                                    </section>
                                </div>
                            <% } %>	
                        <% } else { %>
                            <div class="col-12">
                                <h2 class="products-title" style="color:#44d62d;">No hay productos que coincidan con esa búsqueda</h2>
                            </div>
                        <% } %>
            
                        
                    </div>
                </div>
            </section>

            <%- include('../partials/footer') %>
    </body>

</html>