<!DOCTYPE html>
<html lang="es">

    <%- include("../partials/head", {Solapa:"ZG - Producto Administrador"}) %>

<body>

    <%- include('../partials/header') %> 

    <main>
        <form action="" method="POST" enctype="multipart/form-data" class="form-user">

            <h2>AGREGAR PRODUCTO</h2>

            <div>
                <label for="name">Nombre de producto:</label>
                <input id="nombre" type="text" name="name" placeholder="Nombre Producto">
            </div>

            <div>
                <label for="description">Descripción:</label>
                <input id="description" type="text" name="description" placeholder="Descripción">
            </div>
            
            
            <div>
                <label>Agregar imagenes del producto:</label>
                <input type="file" name="imagen" accept=".jpg, .png" multiple>
            </div>
            

            <div>
                <label for="price">Precio:</label>
                <input id="price" type="number" name="price" placeholder="Precio">
            </div>

            <div>
                <label for="discount">Descuento:</label>
                <input id="descuento" type="number" name="discount" placeholder="Descuento">
            </div>

            <div>
                <label>Categorías de interés:</label>
                    <select name="category">
                        <option name="news" value="novedades" selected>Novedades</option>
                        <option name="offers" value="ofertas">Ofertas</option>
                    </select>
            </div>
            
            <div>
                <label>Consolas:</label>
                    <select name="console">
                        <option name="PlayStation" value="PlayStation" selected>PlayStation</option>
                        <option name="xBox" value="xBox">xBox</option>
                    </select>
            </div>
            
            <div>
                <label>Tipo de producto:</label>
                    <select name="productType">
                        <option name="console" value="consola" selected>Consola</option>
                        <option name="accesory" value="accesorio">Accesorio</option>
                        <option name="game" value="juego">Juego</option>
                    </select>
            </div>

            <div>
                <button type="submit">Agregar Producto</button>
            </div>

        </form>
    </main>

    <%- include('../partials/footer') %> 

    
</body>

</html>